<div class="col-md-6 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notas/nueva-nota" method="POST">

                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" placeholder="Titulo" required autofocus>
                </div>
                <div class="form-group">
                    <textarea name="descripcion" placeholder="Descripcion" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>